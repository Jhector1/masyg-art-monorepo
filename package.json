{
  "name": "haitian-art-store-masyg-v2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "rimraf node_modules **/node_modules .turbo",
    "db:generate": "npm -w @acme/db run generate",
    "db:migrate:dev": "npm -w @acme/db run migrate:dev",
    "db:migrate:deploy": "npm -w @acme/db run migrate:deploy",
    "db:studio": "npm -w @acme/db run studio",
    "postinstall": "node -e \"process.exit(require('fs').existsSync('packages/tailwind-preset/tsconfig.json')?0:0)\""
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "overrides": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^4.0.17",
    "@prisma/client": "^6.10.1",
    "prisma": "^6.10.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.1.0",
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0"
  }
}
